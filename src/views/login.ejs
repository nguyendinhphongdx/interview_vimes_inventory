<!doctype html>
<html lang="en">

<%- include('partials/header'); -%>
<style>
    .divider:after,
    .divider:before {
        content: "";
        flex: 1;
        height: 1px;
        background: #eee;
    }

    .h-custom {
        height: calc(100% - 73px);
    }

    @media (max-width: 450px) {
        .h-custom {
            height: 100%;
        }
    }
    body {
        background-color: #0093E9;
        background-image: linear-gradient(160deg, #0093E9 0%, #80D0C7 100%);
    }
</style>
<body class="d-flex justify-content-center overflow-hidden">
    <div class="d-flex align-items-center" style="width: 100%; height: 100%;">
        <div class="container-fluid h-custom">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-md-12 col-lg-12 col-xl-6">
                    <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/draw2.webp"
                        class="img-fluid" alt="Sample image">
                </div>
                <div class="col-md-8 col-lg-6 col-xl-4">
                    <form>

                        <!-- Email input -->
                        <div class="form-outline mb-4">
                            <label class="form-label" for="form3Example3">Đăng nhập với tài khoản</label>
                            <select id="option-users" class="form-select" aria-label="Default select example">
                                <option selected>Open this select menu</option>
                                <% users.forEach(user=>{ %>
                                    <option value=<%=user.user_id %>><%= user.username %>
                                    </option>
                                    <% }) %>
                            </select>
                        </div>
                        <div class="form-outline mb-4">
                            <label class="form-label" for="form3Example3">Chứng từ nhập kho</label>
                            <select id="option-documents" class="form-select" aria-label="Default select example">
                                <option selected>Open this select menu</option>
                                <% documents.forEach(doc=>{ %>
                                    <option value=<%=doc.document_id %>><%= doc.content %> <%= doc.document_id %>
                                    </option>
                                    <% }) %>
                            </select>
                        </div>
                        <div class="text-center text-lg-start mt-4 pt-2">
                            <div class="d-grid gap-2">
                                <button class="btn btn-primary" type="button" id="btn-login">Đăng nhập</button>
                            </div>
                            <p class="small fw-bold mt-2 pt-1 mb-0">Don't have an account? <a href="#!"
                                    class="link-danger">Register</a></p>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</body>
<%- include('partials/footer', {scripts: ['/assets/js/login.js']}); -%>
</html>
